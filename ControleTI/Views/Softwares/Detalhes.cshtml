@model Software
@{
    ViewData["Title"] = "Detalhes";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Software</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Software
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    Dispositivo
                </th>
                <th>
                    Serial Key
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DispositivosSoftwares)
            {
            <tr>
                <td>
                    @Html.DisplayFor(usu => item.Dispositivo.Nome)
                </td>
                <td>
                    @Html.DisplayFor(usu => item.SerialKey.Key)
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <a asp-action="index" class="btn btn-primary">Voltar</a>
</div>