@model IEnumerable<TipoDispositivo>
@{
    ViewData["Title"] = "Tipo dos Dispositivos";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Criar" class="btn btn-primary">Adicionar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="well">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
           
            <td>
                <a asp-action="Editar" class="btn btn-brown" asp-route-id="@item.Id">Editar</a>
            </td>
            <td>
                <a asp-action="Detalhes" class="btn btn-info" asp-route-id="@item.Id">Detalhes</a>
            </td>
            <td>
                <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>