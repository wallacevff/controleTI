@model Usuario
@{
    ViewData["Title"] = "Excluir";
}

<h2>@ViewData["Title"]</h2>

<h3>Deseja Exluir?</h3>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeUsu)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
    </dl>
    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <input type="submit" class="btn btn-danger" asp-action="Excluir" value="Sim" />
        <a asp-action="index" class="btn btn-success">Não</a>
    </form>
</div>