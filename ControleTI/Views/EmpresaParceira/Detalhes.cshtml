@model EmpresaParceira
@{
    ViewData["Title"] = "Detalhes";
}

<h2>@ViewData["Title"]</h2>
@Html.AntiForgeryToken()
<div>
    <h4>Dispositivo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeFantasia)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
    </dl>
    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <a asp-controller="DispositivoSoftwares" asp-action="CadastrarSoftware" asp-route-dispositivoId="@Model.Id" class="btn btn-warning">Adicionar Software</a>
    <a asp-action="index" class="btn btn-primary">Voltar</a>
    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr class="well">
                <th>
                    Id
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Início
                </th>
                <th>
                    Fim
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contratos)
            {
                <tr id="soft-@item.Id">
                    <td>
                        @Html.DisplayFor(usu => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                       @item.Inicio.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                       @item.Fim.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <!-- <a asp-controller="DispositivoSoftwares"  asp-action="Apagar" class="btn btn-danger" asp-route-id="@item.Id">Del</a> -->
                    </td>

                </tr>
            }
        </tbody>
    </table>
    
</div>