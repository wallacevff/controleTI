@model SerialKey
@{
    ViewData["Title"] = "Detalhes";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Serial Key</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Software
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Software.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Key)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Key)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizadas)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizadas)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Restantes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Restantes)
        </dd>

    </dl>

    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
    <a asp-action="index" class="btn btn-primary">Voltar</a>
    <br />
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr class="well">
                <th>
                    Dispositivos com esta Serial Key
                </th>
                <th>
                    Usuário
                </th>
                <th>
                    Id Instalação
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DispositivosSoftwares)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(usu => item.Dispositivo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(usu => item.Dispositivo.Usuario.NomeUsu)
                    </td>
                    <td>
                        @Html.DisplayFor(usu => item.IdInstalacao)
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>