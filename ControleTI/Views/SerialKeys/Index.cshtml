@model IEnumerable<SerialKey>
@{
    ViewData["Title"] = "Serial Keys";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Criar" class="btn btn-success">Adicionar</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Software.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>
            
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Software)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
           
            <td>
                <a asp-action="Editar" class="btn btn-primary" asp-route-id="@item.SoftwareId, @item.Key">Editar</a>
            </td>
            <td>
                <a asp-action="Detalhes" class="btn btn-warning" asp-route-id="@item.SoftwareId, @item.Key">Detalhes</a>
            </td>
            <td>
                <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.SoftwareId, @item.Key">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>