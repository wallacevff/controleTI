@model ContratoViewModel
<table class="table table-striped table-hover">
    <thead>
        <tr class="well">
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Fim)
            </th>

            <th>
                Empresa Parceira
            </th>
            <th>
                Responsável
            </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody id="dispositivoTableBody">
        @foreach (var item in Model.Contratos)
        {
        <tr name="contratos">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @item.Inicio.ToString("dd/MM/yyyy")
            </td>

            <td>
                @item.Fim.ToString("dd/MM/yyyy")
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EmpresaParceira.NomeFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.NomeUsu)
            </td>

            <td>
                <a asp-action="Editar" class="btn btn-brown" asp-route-id="@item.Id">Editar</a>
            </td>
            
            <td>
                <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>