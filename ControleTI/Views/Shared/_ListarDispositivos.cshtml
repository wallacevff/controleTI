@model IEnumerable<Dispositivo>
<table class="table table-striped table-hover">
    <thead>
        <tr class="well">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDispositivo.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.StatusNome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Usuario.NomeUsu)
            </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody id="dispositivoTableBody">
        @foreach (var item in Model)
        {
        <tr name="dispositivo">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDispositivo.Tipo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusNome)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Usuario.NomeUsu)
            </td>

            <td>
                <a asp-action="Editar" class="btn btn-brown" asp-route-id="@item.Id">Editar</a>
            </td>
            <td>
                <a asp-action="Detalhes" class="btn btn-info" asp-route-id="@item.Id">Detalhes</a>
            </td>
            <td>
                <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>
</table>