@model IEnumerable<Dispositivo>
<table class="table table-striped table-hover">
    <thead>
        <tr class="well">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDispositivo.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.NomeUsu)
            </th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDispositivo.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.NomeUsu)
                </td>

                <td>
                    <a asp-action="Editar" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                </td>
                <td>
                    <a asp-action="Detalhes" class="btn btn-warning" asp-route-id="@item.Id">Detalhes</a>
                </td>
                <td>
                    <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>